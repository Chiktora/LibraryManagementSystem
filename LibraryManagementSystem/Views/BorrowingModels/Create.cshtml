@model LibraryManagementSystem.Models.BorrowingModel

@{
    ViewData["Title"] = "New Borrowing";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-plus me-2"></i>New Borrowing Request
            </h1>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="BookId" class="form-label">Select Book</label>
                    <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId">
                        <option value="">-- Select a Book to Borrow --</option>
                    </select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-paper-plane me-2"></i>Submit Request
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Initialize select2 for better dropdown experience
            $('.form-select').select2({
                theme: 'bootstrap-5'
            });
        });
    </script>
}
