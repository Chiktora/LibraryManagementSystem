@model LibraryManagementSystem.Models.PublisherModel

@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-trash me-2"></i>Delete Publisher
            </h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="alert alert-danger mb-4">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                        </h4>
                        <p class="mb-0">
                            Are you sure you want to delete the publisher <strong>@Model.Name</strong>?
                            This action cannot be undone.
                        </p>
                    </div>

                    @if (Model.Books.Any())
                    {
                        <div class="alert alert-warning mb-4">
                            <h5 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Associated Books
                            </h5>
                            <p class="mb-0">
                                This publisher has @Model.Books.Count associated books. 
                                Deleting this publisher will affect these books.
                            </p>
                        </div>
                    }

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete Publisher
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
