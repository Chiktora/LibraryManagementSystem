@model LibraryManagementSystem.Models.PublisherModel

@{
    ViewData["Title"] = "Publisher Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-building me-2"></i>Publisher Details
            </h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="mb-4">@Model.Name</h3>
                            <h5 class="text-muted mb-4">Published Books</h5>
                            @if (Model.Books.Any())
                            {
                                <div class="list-group">
                                    @foreach (var book in Model.Books)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">@book.Title</h6>
                                                <small class="text-muted">@book.PublishedDate?.ToString("d")</small>
                                            </div>
                                            <p class="mb-1 text-muted">
                                                by @string.Join(", ", book.BookAuthors.Select(ba => $"{ba.Author.FirstName} {ba.Author.LastName}"))
                                            </p>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No books available from this publisher.</p>
                            }
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">Publisher Statistics</h5>
                                    <p class="mb-2">
                                        <i class="fas fa-books me-2"></i>Total Books: <span class="text-muted">@Model.Books.Count</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
