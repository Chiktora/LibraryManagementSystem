@model LibraryManagementSystem.Models.AuthorModel

@{
    ViewData["Title"] = "Author Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-user me-2"></i>Author Details
            </h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="mb-4">@Model.FirstName @Model.LastName</h3>
                            <dl class="row">
                                <dt class="col-sm-3">First Name</dt>
                                <dd class="col-sm-9">@Model.FirstName</dd>

                                <dt class="col-sm-3">Last Name</dt>
                                <dd class="col-sm-9">@Model.LastName</dd>

                                <dt class="col-sm-3">Books</dt>
                                <dd class="col-sm-9">
                                    @if (Model.BookAuthors.Any())
                                    {
                                        <ul class="list-unstyled">
                                            @foreach (var bookAuthor in Model.BookAuthors)
                                            {
                                                <li class="mb-2">
                                                    <i class="fas fa-book me-2 text-primary"></i>
                                                    @bookAuthor.Book.Title
                                                    <small class="text-muted">(@bookAuthor.Book.PublishedDate?.Year)</small>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">No books available</p>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">Author Statistics</h5>
                                    <p class="mb-2">
                                        <i class="fas fa-books me-2"></i>Total Books: <span class="text-muted">@Model.BookAuthors.Count</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
