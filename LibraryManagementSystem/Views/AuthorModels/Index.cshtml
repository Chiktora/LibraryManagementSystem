@model IEnumerable<LibraryManagementSystem.Models.AuthorModel>

@{
    ViewData["Title"] = "Authors";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-user-edit me-2"></i>Author Management
            </h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Author
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                            <th>@Html.DisplayNameFor(model => model.LastName)</th>
                            <th>Books</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.LastName)</strong>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @item.BookAuthors.Count books
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group d-flex justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add tooltips to action buttons
            $('[title]').tooltip();
        });
    </script>
}
