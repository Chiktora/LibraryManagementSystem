@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h1 class="display-4 mb-4">Welcome to Library Management System</h1>
            <p class="lead text-muted">Streamline your library experience with our digital borrowing system</p>
            <p class="text-muted">Easily browse books, manage borrowings, and discover new reads - all in one place</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book-reader fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Browse Collection</h5>
                    <p class="card-text">Browse our extensive library collection and find your next great read.</p>
                    <a asp-controller="BookModels" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-right me-2"></i>View Books
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">My Borrowings</h5>
                    <p class="card-text">Track your current loans, due dates, and manage your borrowing history.</p>
                    <a asp-controller="BorrowingModels" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-right me-2"></i>View Borrowings
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Find by Author</h5>
                    <p class="card-text">Search books by your favorite authors and discover their complete works.</p>
                    <a asp-controller="AuthorModels" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-right me-2"></i>View Authors
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-tools me-2"></i>Library Management Tools
                        </h5>
                        <div class="row mt-3">
                            <div class="col-md-3 mb-2">
                                <a asp-controller="BookModels" asp-action="Create" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-plus me-2"></i>Add New Book
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-controller="AuthorModels" asp-action="Create" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-user-plus me-2"></i>Add New Author
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-controller="GenreModels" asp-action="Create" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-tag me-2"></i>Add New Genre
                                </a>
                            </div>
                            <div class="col-md-3 mb-2">
                                <a asp-controller="PublisherModels" asp-action="Create" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-building me-2"></i>Add New Publisher
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
