@model IEnumerable<LibraryManagementSystem.Models.BookModel>

@{
    ViewData["Title"] = "Books";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-books me-2"></i>Book Management
            </h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Book
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                            <th>Authors</th>
                            <th>@Html.DisplayNameFor(model => model.Genre)</th>
                            <th>@Html.DisplayNameFor(model => model.Publisher)</th>
                            <th>@Html.DisplayNameFor(model => model.PublishedDate)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                                <td>
                                    @string.Join(", ", item.BookAuthors.Select(ba => $"{ba.Author.FirstName} {ba.Author.LastName}"))
                                </td>
                                <td>
                                    <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.Genre.Name)</span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Publisher.Name)</td>
                                <td>@(item.PublishedDate?.ToString("d"))</td>
                                <td>
                                    <div class="btn-group d-flex justify-content-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add tooltips to action buttons
            $('[title]').tooltip();
        });
    </script>
}
