@model LibraryManagementSystem.Models.BookModel

@{
    ViewData["Title"] = "Book Details";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="page-title">
                <i class="fas fa-book me-2"></i>Book Details
            </h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="mb-4">@Model.Title</h3>
                            <dl class="row">
                                <dt class="col-sm-3">ISBN</dt>
                                <dd class="col-sm-9">@Model.ISBN</dd>

                                <dt class="col-sm-3">Authors</dt>
                                <dd class="col-sm-9">
                                    @string.Join(", ", Model.BookAuthors.Select(ba => $"{ba.Author.FirstName} {ba.Author.LastName}"))
                                </dd>

                                <dt class="col-sm-3">Genre</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-primary">@Model.Genre.Name</span>
                                </dd>

                                <dt class="col-sm-3">Publisher</dt>
                                <dd class="col-sm-9">@Model.Publisher.Name</dd>

                                <dt class="col-sm-3">Published Date</dt>
                                <dd class="col-sm-9">@Model.PublishedDate?.ToString("d")</dd>

                                <dt class="col-sm-3">Description</dt>
                                <dd class="col-sm-9">
                                    <p class="text-muted">@Model.Description</p>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">Book Status</h5>
                                    <p class="mb-2">
                                        <i class="fas fa-clock me-2"></i>Added: <span class="text-muted">@DateTime.Now.ToString("d")</span>
                                    </p>
                                    <p class="mb-2">
                                        <i class="fas fa-book-reader me-2"></i>Borrowings: <span class="text-muted">@Model.Borrowings.Count</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
